{
  "name": "donglecontrol-projector",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "node dev-separate.js",
    "build": "vite build && electron-builder",
    "build:linux": "vite build && electron-builder --linux",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win",
    "build:all": "vite build && electron-builder -mwl",
    "preview": "vite preview",
    "test-electron": "electron --no-sandbox --disable-setuid-sandbox electron-test.js",
    "electron-direct": "electron --no-sandbox --disable-setuid-sandbox electron/main.js"
  },
  "build": {
    "appId": "com.donglecontrol.projector",
    "productName": "DCProjector",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "afterPack": "./build-hooks.js",
    "linux": {
      "target": "AppImage",
      "category": "AudioVideo"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "socket.io": "^4.8.1",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/cli": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-fs": "^2",
    "@tauri-apps/plugin-http": "^2",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.18",
    "electron": "^39.0.0-beta.5",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
